# NocoBase with Neon PostgreSQL Configuration
# Copy this file to .env and fill in your Neon credentials

################# APPLICATION #################

APP_ENV=production
APP_KEY=your-secret-key-change-this
APP_PORT=13000
TIMEZONE=Europe/Paris

################# NEON DATABASE #################
# Get these values from your Neon dashboard:
# https://console.neon.tech/

# Your Neon host (e.g., ep-cool-name-123456.eu-central-1.aws.neon.tech)
NEON_HOST=your-project-id.region.aws.neon.tech

# Your database name (default is usually 'neondb')
NEON_DATABASE=neondb

# Your Neon username
NEON_USER=your_username

# Your Neon password
NEON_PASSWORD=your_password

################# INITIAL SETUP #################

INIT_LANG=fr-FR
INIT_ROOT_EMAIL=admin@example.com
INIT_ROOT_PASSWORD=admin123
INIT_ROOT_NICKNAME=Admin
INIT_ROOT_USERNAME=admin
